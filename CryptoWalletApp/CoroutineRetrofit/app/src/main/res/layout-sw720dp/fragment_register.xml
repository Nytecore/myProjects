<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tablet_screen2"
    tools:context=".view.RegisterFragment">


    <TextView
        android:id="@+id/signInTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="300dp"
        android:fontFamily="@font/touche_bold_italic"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="300dp"
        android:fontFamily="@font/touche_italic"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Already have an account?"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <TextView
        android:id="@+id/welcomeText13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:fontFamily="@font/harmonia_sans_bold_2"
        android:shadowColor="@color/black"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/touche_italic"
        android:text="Youâ€™re just a few steps away from"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText13" />

    <TextView
        android:id="@+id/welcomeText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/touche_italic"
        android:text="the exclusive benefits we offer"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText13" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="700dp"
        android:layout_height="80dp"
        android:layout_marginBottom="350dp"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/harmonia_sans_bold_2"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Sign Up!"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/resisterPasswordEditText"
        android:layout_width="700dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/harmonia_sans_bold_2"
        android:gravity="center"
        android:hint="Enter password"
        android:inputType="text|textPassword"
        android:paddingStart="40dp"
        android:paddingEnd="70dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/resisterPasswordEditText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/resisterPasswordEditText2"
        android:layout_width="700dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/harmonia_sans_bold_2"
        android:gravity="center"
        android:hint="Confirm password"
        android:inputType="text|textPassword"
        android:paddingStart="40dp"
        android:paddingEnd="70dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/signupButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="700dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/profile_icon"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/harmonia_sans_bold_2"
        android:gravity="center"
        android:hint="Enter username"
        android:inputType="text"
        android:paddingStart="40dp"
        android:paddingEnd="70dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/registerEmailEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/registerEmailEditText"
        android:layout_width="700dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/harmonia_sans_bold_2"
        android:gravity="center"
        android:hint="Enter your e-mail"
        android:inputType="text"
        android:paddingStart="40dp"
        android:paddingEnd="70dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/resisterPasswordEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>